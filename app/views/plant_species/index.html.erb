<div class="container-md">
    <h1>Plant Species</h1>

    <div class="row">
        <div class="col-md-3">
            <%= link_to "Add New", new_plant_species_url, class: "btn btn-success" %>
        </div>
    </div>

    <div class="row">
        <% @plant_species.each do |plant_species| %>
        <div class="col col-md-4 me-auto">
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title"><%= plant_species.scientific_name %></h5>
                    <h6 class="card-subtitle mb-2 text-muted"><%= plant_species.common_name %></h6>
                    <%= link_to(
                    "Show",
                    plant_species_url(plant_species),
                    class: "card-link btn btn-primary"
                ) %>
                    <%= link_to(
                    "Edit",
                    edit_plant_species_url(plant_species),
                    class: "card-link btn btn-danger"
                ) %>
                </div>
            </div>
        </div>
        <% end %>
    </div>
</div>
