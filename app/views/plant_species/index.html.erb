<div class="container-md">
    <h1>Plant Species</h1>

    <div class="row">
        <div class="col-md-3">
            <%= link_to "Add New", new_plant_species_url, class: "btn btn-success" %>
        </div>
    </div>

    <div class="row">
        <% @plant_species.each do |plant_species| %>
        <div class="col col-md-4 me-auto">
            <%= render partial: 'plant_species/card', locals: { plant_species: plant_species } %>
        </div>
        <% end %>
    </div>
</div>
